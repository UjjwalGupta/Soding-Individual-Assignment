<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#141616" />
            <gradient android:angle="-90" android:startColor="#121313" android:endColor="#0a0d0c"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#040505" />
            <solid android:color="#080808"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="13dip" />
            <stroke android:width="1dip" android:color="#5e6362" />
            <gradient android:angle="-90" android:startColor="#189b6f" android:endColor="#199191" />
        </shape>
    </item>
</selector>