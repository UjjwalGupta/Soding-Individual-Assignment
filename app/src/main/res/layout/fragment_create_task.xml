<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ujjwalkumargupta.intellij.Fragments.CreateTaskFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

        <EditText
            android:id="@+id/et_create_task_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:hint="Name"
            android:textColor="@android:color/white" />

        <EditText
            android:id="@+id/et_create_task_description"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:padding="10dp"
            android:layout_marginTop="10dp"
            android:gravity="start"
            android:background="@drawable/description"
            android:hint="Description"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/btn_submit_task"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/btn_rounded_corner"
            android:text="Submit"
            android:layout_marginTop="30dp"/>

    </LinearLayout>

</RelativeLayout>
